<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D5D0D0"
    android:layout_height="match_parent"
    android:padding="15dp"


    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:background="#D5D0D0"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:background="#D5D0D0"
            android:translationZ="5dp"
            app:cardCornerRadius="15dp">


            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:background="@drawable/background"

                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/weakness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"

                        android:text="Weakness"
                        android:textColor="@color/black"
                        android:textSize="21dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/weaknessimg" />

                    <TextView
                        android:id="@+id/percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Percent"
                        android:textAlignment="textEnd"
                        android:textColor="#5A5656"
                        android:textSize="21dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />    <!-- for gap between views-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/realNumbers"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"

                        android:text="Real Numbers"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:id="@+id/realNumberpercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="50%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="21dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/threat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"

                        android:text="Threat"
                        android:textColor="#EF0606"
                        android:textSize="21dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_baseline_show_chart_24" />

                    <TextView
                        android:id="@+id/threatpercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Percent"
                        android:textAlignment="textEnd"
                        android:textColor="#5A5656"
                        android:textSize="21dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/numberSystem"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"

                        android:text="Number System"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:id="@+id/numberSystempercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="0%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="21dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/polyfact"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"

                        android:text="Polynomial &amp; Factorization"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:id="@+id/polyfactpercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="20%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="21dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/linearIneq"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"

                        android:text="Linear Equation &amp; Inequation"
                        android:textColor="@color/black"
                        android:textSize="21dp" />

                    <TextView
                        android:id="@+id/linearIneqpercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="20%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="21dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="5dp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="8dp"
            android:background="#D5D0D0"
            android:translationZ="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:background="@drawable/heading"

                android:drawableEnd="@drawable/book_24"

                android:paddingLeft="25dp"
                android:paddingTop="18dp"
                android:paddingRight="25dp"
                android:paddingBottom="18dp"
                android:text="Mathematics "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="23dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>




    </RelativeLayout>





</RelativeLayout>